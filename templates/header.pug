nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
    a(class="navbar-brand" href="/") IT Portal
    button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
        <span class="navbar-toggler-icon"></span>
    div(class="collapse navbar-collapse" id="navbarNav")
        if childPages
            ul(class="navbar-nav")
                each item in childPages
                    li(class="nav-item active")
                        a(class="nav-link" href="/" + item.ID) #{item.pageName}
        if(auth && role === 'ADMIN')
            <a class="navbar-text nav-link" href="/admin">Admin</a>
            <a class="navbar-text nav-link" href="/logout">Log Out</a>
        else if(auth && role === 'USER')
            <a class="navbar-text nav-link" href="/account">Account</a>
            <a class="navbar-text nav-link" href="/logout">Log Out</a>
        else
            <a class="navbar-text nav-link" href="/login">Log In/Sign Up</a>